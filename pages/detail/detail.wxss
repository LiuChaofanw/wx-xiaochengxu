/* pages/detail/detail.wxss */
.detailContainer{
  width: 100%;
  display:flex;
  flex-direction: column;
}
.detail_img{
  width: 100%;
  height: 460rpx;
}
.music {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top:200rpx;
  left: 50%;
  margin-left: -30rpx;
}
.avatar_date{
  padding: 10rpx;
}
.avatar_date image{
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.avatar_date text{
  font-size: 32rpx;
}
.company {
  font-size: 38rpx;
  font-weight: 700;
}
.detail_collection_share{
  position: relative;
}
.detail_collection_share .collection_share {
  float: right;
  margin-right: 50rpx;
}
.detail_collection_share .collection_share image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}
.detail_collection_share .line{
  width: 90%;
  height: 1rpx;
  background: #eee;
  z-index: -1;
  position: absolute;
  top: 45rpx;
  left: 5%;
}
button{
  height: 80rpx;
  width: 200rpx;
}
.content{
  font-size: 32rpx;
  text-indent: 32rpx;
  line-height: 50rpx;
  color: #333;
}